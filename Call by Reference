#include <stdio.h>

void swap(int *a, int *b) {
    int temp;
    temp = *a;
    *a = *b;
    *b = temp;
}

void modifyValue(int *x) {
    *x = *x * 5; 
}

int main() {
    int num1 = 10, num2 = 20;
    int val = 7;

    printf("--- Swapping Two Numbers ---\n");
    printf("Before Swap: num1 = %d, num2 = %d\n", num1, num2);
    
    swap(&num1, &num2);
    
    printf("After Swap: num1 = %d, num2 = %d\n\n", num1, num2);

    printf("--- Modifying Value Inside Function ---\n");
    printf("Before Modification: val = %d\n", val);
    
    modifyValue(&val);
    
    printf("After Modification: val = %d\n", val);

    return 0;
}
