#include <stdio.h>
#include <math.h>

int main() {
    int choice, n, t1 = 0, t2 = 1, nextTerm;
    int r, sum = 0, temp;
    
    printf("\n1. Fibonacci Sequence\n2. Palindrome Check\n3. Armstrong Check\nEnter choice: ");
    scanf("%d", &choice);

    switch(choice) {
        case 1:
            printf("Enter the number of terms: ");
            scanf("%d", &n);
            printf("Fibonacci Series: ");
            for (int i = 1; i <= n; ++i) {
                printf("%d, ", t1);
                nextTerm = t1 + t2;
                t1 = t2;
                t2 = nextTerm;
            }
            printf("\n");
            break;
            
        case 2:
            printf("Enter an integer: ");
            scanf("%d", &n);
            temp = n;
            sum = 0;
            while (n > 0) {
                r = n % 10;
                sum = (sum * 10) + r;
                n = n / 10;
            }
            if (temp == sum)
                printf("Palindrome number\n");
            else
                printf("Not a Palindrome\n");
            break;
            
        case 3:
            printf("Enter an integer: ");
            scanf("%d", &n);
            temp = n;
            sum = 0;
            int digits = 0;
            int temp2 = n;
            // Count digits
            while(temp2 != 0) {
                temp2 /= 10;
                digits++;
            }
            // Calculate sum of powers
            while (temp != 0) {
                r = temp % 10;
                sum += pow(r, digits);
                temp /= 10;
            }
            if (n == sum)
                printf("Armstrong number\n");
            else
                printf("Not an Armstrong number\n");
            break;
            
        default:
            printf("Invalid choice\n");
    }
    return 0;
}
